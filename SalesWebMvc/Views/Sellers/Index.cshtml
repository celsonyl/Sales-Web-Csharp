@model IEnumerable<SalesWebMvc.Models.Seller> 


@{
    ViewData["Title"] = "Sellers";
}
<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hoverd">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => i.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => i.BaseSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@i.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@i.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@i.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
